{
	"name": "coldtrick/tour_guide",
	"description": "Configure step-by-step guides and feature introductions for your Elgg site",
	"homepage": "https://www.coldtrick.com",
	"type": "elgg-plugin",
	"keywords": ["elgg", "plugin", "admin"],
	"license": "GPL-2.0-only",
	"support": {
		"source": "https://github.com/ColdTrick/tour_guide",
		"issues": "https://github.com/ColdTrick/tour_guide/issues"
	},
	"require": {
		"composer/installers": "^1.0.8",
		"npm-asset/driver.js": "~0.9.0"
	},
	"require-dev": {
		"coldtrick/sniffs": "dev-master"
	},
	"repositories": [
		{
            "type": "composer",
            "url": "https://asset-packagist.org"
		}
	],
	"config": {
		"fxp-asset": {
            "enabled": false
		},
		"allow-plugins": {
			"composer/installers": true
		}
	},
	"conflict": {
		"elgg/elgg": "<4.3"
	}
}
